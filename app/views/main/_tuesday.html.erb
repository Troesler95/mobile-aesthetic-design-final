<div class="event long-event">
  <h1 class="event-name">Web Programming I</h1>
  <p class="start">Start Time: 8:00AM</p>
  <p class="end">End Time: 9:20AM</p>
  <p class="location">Location: Fenton 12356</p>
  <p class="days">Days: TR</p>
</div>

<%
  counter = 8
  13.times do
    if counter < 12
%>
        <div id="time-block">
          <h1 class="time"><%= counter %>:00AM</h1>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
        </div>
    <% elsif counter == 12 %>
        <div id="time-block">
          <h1 class="time"><%= counter %>:00PM</h1>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
        </div>
    <% else %>
        <div id="time-block">
          <h1 class="time"><%= counter - 12 %>:00PM</h1>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
          <span class="quarter-line"></span>
        </div>
    <%end
      counter+=1
      end %>